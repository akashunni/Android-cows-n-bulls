<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.akash.cowsnbulls.HighScore">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="High Score Settings"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET HIGH SCORE"
        android:id="@+id/reset_score"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="High Score : "
        android:id="@+id/textView5"
        android:layout_marginBottom="86dp"
        android:layout_above="@+id/reset_score"
        android:layout_toLeftOf="@+id/highscore_text"
        android:layout_toStartOf="@+id/highscore_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00"
        android:id="@+id/highscore_text"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignRight="@+id/reset_score"
        android:layout_alignEnd="@+id/reset_score" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:id="@+id/play_again_btn"
        android:layout_above="@+id/reset_score"
        android:layout_alignRight="@+id/reset_score"
        android:layout_alignEnd="@+id/reset_score"
        android:layout_alignLeft="@+id/reset_score"
        android:layout_alignStart="@+id/reset_score" />


</RelativeLayout>
